{
  "coc.preferences.useQuickfixForLocations": true,

  "list.insertMappings": {
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },

  "semanticTokens.enable": true,

  "snippet.statusText": "",

  "snippets.extends": {
      "cpp": ["c"]
  },
  "snippets.loadFromExtensions": false,
  "snippets.ultisnips.directories": [
      "UltiSnips",
      "UltiSnips/specific"
  ],

  "suggest.noselect": true,

  "tree.closedIcon": "",
  "tree.openedIcon": "",

  "workspace.bottomUpFiletypes": ["*.py", "*.pyi"],
  "workspace.workspaceFolderCheckCwd": false,
  "workspace.rootPatterns": [
      ".git",
      ".projections.json",
      "pyrightconfig.json",
      "pyproject.toml"
  ]
}
