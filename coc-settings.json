{
  "suggest.timeout": 500,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.source.around.firstMatch": false,
  "coc.source.buffer.firstMatch": false,
  "list.insertMappings": {
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".editorconfig", ".git/",
        ".svn/"],
      "initializationOptions": {
        "cache": {
          "request.timeout": "10000"
        },
        "index": {
          "threads": 2
        }
      }
    }
  }
}
