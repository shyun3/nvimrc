{
  "coc.preferences.useQuickfixForLocations": true,

  "inlayHint.display": false,

  "list.insertMappings": {
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },

  "semanticTokens.enable": true,

  "snippet.statusText": "",
  "snippets.loadFromExtensions": false,
  "snippets.ultisnips.directories": ["UltiSnips", "UltiSnips/specific"],

  "suggest.noselect": true,
  "suggest.reTriggerAfterIndent": false,

  "tree.closedIcon": "",
  "tree.openedIcon": "",

  "workspace.bottomUpFiletypes": ["*.py", "*.pyi"],
  "workspace.workspaceFolderCheckCwd": false,
  "workspace.rootPatterns": [
    ".git",
    ".projections.json",
    "pyrightconfig.json",
    "pyproject.toml"
  ],
  "snippets.ultisnips.pythonPrompt": false,

  "[lua]": {
    "semanticTokens.enable": false
  }
}
