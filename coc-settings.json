{
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.rootPatterns": [
      ".git",
      ".projections.json",
      "pyrightconfig.json",
      "pyproject.toml"
  ],

  "workspace.bottomUpFiletypes": ["*.py", "*.pyi"],
  "workspace.workspaceFolderCheckCwd": false,

  "semanticTokens.filetypes": ["*"],

  "list.insertMappings": {
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },

  "tree.closedIcon": "",
  "tree.openedIcon": ""
}
